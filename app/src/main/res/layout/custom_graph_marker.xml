<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="3dp"
    android:background="@drawable/bg_custom_marker">

    <TextView
        android:id="@+id/tv_selected_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:textSize="11sp"
        android:textColor="@color/text_selected_graph"
        tools:text="15 Jun, 2021"
        android:fontFamily="@font/nunito_semibold"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@id/tv_selected_day"
        app:layout_constraintEnd_toEndOf="@id/tv_rates_on_graph"
        android:background="@color/text_selected_graph"
        app:layout_constraintTop_toBottomOf="@id/tv_selected_day"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        />

    <TextView
        android:id="@+id/tv_rates_on_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_selected_day"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:paddingRight="4dp"
        android:paddingEnd="4dp"
        android:paddingLeft="4dp"
        android:paddingStart="4dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textSize="12sp"
        android:textColor="@color/color_whitish_green"
        tools:text="1 EUR = 4.224 USD"
        android:fontFamily="@font/raleway_regular"
        />

</androidx.constraintlayout.widget.ConstraintLayout>